{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true  // 兼容JS文件
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js"  // 兼容JS文件
  ],
  "exclude": [
    "node_modules",
    ".vscode",  // 通常不需要对IDE配置进行类型检查
    "public"    // 静态资源目录，不需要TypeScript处理
  ]
}
