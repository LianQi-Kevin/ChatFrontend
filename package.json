{
  "name": "xinghuochat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/index.js",
  "author": {
    "name": "LianQi",
    "url": "https://lianqidev.cn"
  },
  "description": "The conversation application with XingHuo LLM.",
  "repository": {
    "type": "git",
    "url": "https://github.com/LianQi-Kevin/QRcodeCreater"
  },
  "license": "APACHE-2.0",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "electron:start": "electron --trace-warnings .",
    "electron:build": "tsc --noEmit && vite build && electron-builder",
    "electron:postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "xinghuochat",
    "appId": "cn.lianqidev.xinghuochat",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        "portable"
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "compression": "maximum",
    "files": [
      "dist/**/*",
      "!node_modules"
    ]
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vueuse/core": "^10.7.2",
    "axios": "^1.6.7",
    "crypto-js": "^4.2.0",
    "element-plus": "^2.5.1",
    "github-markdown-css": "^5.5.0",
    "localforage": "^1.10.0",
    "markdown-it": "^14.0.0",
    "nanoid": "^5.0.5",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^18.19.14",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/runtime-dom": "^3.4.15",
    "electron": "^28.2.4",
    "electron-builder": "^24.12.0",
    "sass": "^1.70.0",
    "shiki": "^1.0.0-beta.2",
    "tree-kill": "^1.2.2",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-icons": "^0.18.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0-beta.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-inspect": "^0.8.1"
  }
}
